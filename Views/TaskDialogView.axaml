<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="ActivityPerson.Views.TaskDialogWindow"
        Title="Добавить задачу на сегодня"
        Width="400"
        Height="200">

	<StackPanel Margin="20">
		<TextBlock Text="Описание задачи:"
                   Margin="0,0,0,5"
                   FontWeight="Bold"/>

		<TextBox Name="TaskDescriptionTextBox"
                 AcceptsReturn="True"
                 Height="80"
                 Margin="0,0,15,0"
                 TextWrapping="Wrap"/>

		<StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
			<Button Content="Отмена"
                    Width="100"
                    Height="30"
                    Name="CancelButton"/>

			<Button Content="Сохранить"
                    Width="100"
                    Height="30"
                    IsDefault="True"
                    Background="#40C463"
                    Foreground="White"
                    Name="SaveButton"/>
		</StackPanel>
	</StackPanel>
</Window>