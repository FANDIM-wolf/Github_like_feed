<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ActivityPerson.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ActivityPerson.Views.MainView"
             x:DataType="vm:MainWindowViewModel">
    
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Кнопка для добавления задачи -->
		<StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
			<Button Content="Добавить задачу"
                    Command="{Binding AddTaskCommand}"
                    Width="150"
                    Background="#40C463"
                    Foreground="White"/>

			<Button Content="Просмотр задач"
                    Command="{Binding ViewTasksCommand}"
                    Width="150"
                    Background="#30A14E"
                    Foreground="White"/>
		</StackPanel>
		
                
        <!-- Статус подключения -->
        <TextBlock Grid.Row="1"
                   Text="{Binding ConnectionStatus}"
                   Margin="10"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"/>

        <!-- Основная сетка активности -->
        <Grid Grid.Row="2" RowDefinitions="Auto,*,Auto,Auto" Margin="5">
            <!-- Месяца с отступом -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="50,0,0,5">
                <ItemsControl ItemsSource="{Binding Months}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                       Margin="0,0,10,0"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="Black"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Сетка дней с днями недели -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*">
                <!-- Контейнер для дней недели -->
                <ItemsControl Grid.Column="1" ItemsSource="{Binding ActivityWeekRows}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Spacing="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                <!-- День недели перед каждой строкой -->
                                <TextBlock Text="{Binding DayOfWeekLabel}"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           Width="40"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>

                                <!-- Строка квадратиков -->
                                <ItemsControl ItemsSource="{Binding Days}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Квадратики с небольшим отступом -->
                                            <Border Margin="1"
                                                    CornerRadius="2"
                                                    Width="14"
                                                    Height="14"
                                                    BorderBrush="{Binding BorderColor}"
                                                    BorderThickness="1"
                                                    Background="{Binding Color}" 
                                                    ToolTip.Tip="{Binding Date, StringFormat='{}{0:dd MMM yyyy}'}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- Подпись -->
            <TextBlock Grid.Row="2"
                       Text="Learn how we count contributions"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"
                       FontSize="12"
                       Foreground="Black"/>

            <!-- Легенда -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Spacing="5">
                <TextBlock Text="Less" FontSize="12" Foreground="Black" VerticalAlignment="Center"/>
                <Rectangle Width="14" Height="14" Fill="#EBEDF0" Stroke="Black" StrokeThickness="1" RadiusX="2" RadiusY="2"/>
                <Rectangle Width="14" Height="14" Fill="#9BE9A8" Stroke="Black" StrokeThickness="1" RadiusX="2" RadiusY="2"/>
                <Rectangle Width="14" Height="14" Fill="#40C463" Stroke="Black" StrokeThickness="1" RadiusX="2" RadiusY="2"/>
                <Rectangle Width="14" Height="14" Fill="#30A14E" Stroke="Black" StrokeThickness="1" RadiusX="2" RadiusY="2"/>
                <Rectangle Width="14" Height="14" Fill="#216E39" Stroke="Black" StrokeThickness="1" RadiusX="2" RadiusY="2"/>
                <TextBlock Text="More" FontSize="12" Foreground="Black" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>